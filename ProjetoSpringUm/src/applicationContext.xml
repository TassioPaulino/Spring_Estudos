<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

<bean id="meuRelatorio" class="com.tassio_paulino.IoC.Relatorio"></bean>

<bean id ="meuDiretor" class="com.tassio_paulino.IoC.DiretorEmpregado">
    <constructor-arg ref="meuRelatorio"></constructor-arg>
</bean>


<bean id ="meuGerente" class="com.tassio_paulino.IoC.GerenteEmpregado">
    <constructor-arg ref="meuRelatorio"></constructor-arg>
</bean>


<bean id ="meuSecretario" class="com.tassio_paulino.IoC.SecretarioEmpregado">
    <property name="novoRelatorio" ref="meuRelatorio"></property>
</bean>


</beans>