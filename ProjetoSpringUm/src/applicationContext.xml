<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

<context:property-placeholder location="classpath:empregados.propriedades" />

<bean id="meuRelatorio" class="com.tassio_paulino.IoC.Relatorio"></bean>

<bean id ="meuDiretor" class="com.tassio_paulino.IoC.DiretorEmpregado">
    <constructor-arg ref="meuRelatorio"></constructor-arg>
    <property name="email" value="${email}"></property>
    <property name="nomeDaEmpresa" value="${nomeDaEmpresa}"></property>
</bean>


<bean id ="meuGerente" class="com.tassio_paulino.IoC.GerenteEmpregado">
    <constructor-arg ref="meuRelatorio"></constructor-arg>
    <property name="email" value="gerente@empresa.com.br"></property>
    <property name="nomeDaEmpresa" value="Empresa ltda"></property>
</bean>


<bean id ="meuSecretario" class="com.tassio_paulino.IoC.SecretarioEmpregado">
    <property name="novoRelatorio" ref="meuRelatorio"></property>
    <property name="email" value="secretaria@empresa.com.br"></property>
    <property name="nomeDaEmpresa" value="Empresa ltda"></property>
</bean>


</beans>